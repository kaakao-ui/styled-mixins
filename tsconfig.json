{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "rootDir": "src",
    "declarationDir": "types",
    "declaration": true,
    "sourceMap": false,
    "noEmit": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/dist", "**/*.test.tsx", "**/*.test.ts"]
}
